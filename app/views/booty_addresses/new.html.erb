<div class="row">
  <div class="span3"></div>
  <div class="span6">
    <%= form_for @booty_address, method: "put" do |f| %>
      <fieldset>
        <legend>
          Booty Address
        </legend>
        <div class="row">
          <div class="span4">
            <%= f.label :street1 %>
            <%= f.text_field :street1,
                             class: "input-block-level"
            %>
          </div>
          <div class="span2">
            <%= f.label :apt_number,
                        "Apt Number"
            %>
            <%= f.text_field :apt_number,
                             class: "input-block-level"
            %>
          </div>
        </div>
        <div class="row">
          <div class="span3">
            <%= f.label :city %>
            <%= f.text_field :city,
                             class: "input-block-level"
            %>
          </div>
          <div class="span1">
            <%= f.label :state %>
            <%= f.text_field :state,
                             class: "input-block-level"
            %>
          </div>
          <div class="span2">
            <%= f.label :zip %>
            <%= f.text_field :zip,
                             class: "input-block-level"
            %>
          </div>
        </div>
        <%= f.submit "Submit",
                     class: "btn"
        %>
      </fieldset>
    <% end %>
  </div>
  <div class="span3"></div>
</div>
