<div class="row">
  <div class="span3"></div>
  <div class="span6">
    <%= form_for @booty_address do |f| %>
      <% if @booty_address.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(
                @booty_address.errors.count,
                "error"
              )
            %>
            prohibited this sign_up from being created:</h2>
          <ul>
            <% @booty_address.errors.full_messages.each do |msg| %>
              <li>
                <%= msg %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <fieldset>
        <legend>
          Booty Address
        </legend>
        <div class="row">
          <div class="span6">
            <%= f.label :street1 %>
            <%= f.text_field :street1,
                             class: "input-block-level"
            %>
          </div>
        </div>
        <div class="row">
          <div class="span3">
            <%= f.label :city %>
            <%= f.text_field :city,
                             class: "input-block-level"
            %>
          </div>
          <div class="span1">
            <%= f.label :state %>
            <%= f.text_field :state,
                             class: "input-block-level"
            %>
          </div>
          <div class="span2">
            <%= f.label :zip %>
            <%= f.text_field :zip,
                             class: "input-block-level"
            %>
          </div>
        </div>
        <%= f.submit "Submit",
                     class: "btn"
        %>
      </fieldset>
    <% end %>
  </div>
  <div class="span3"></div>
</div>
